{
  "ci": {
    "collect": {
      "staticDistDir": "dist",
      "isSinglePageApplication": true,
      "url": ["/", "/about", "/services", "/contact"]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.85 }],
        "categories:accessibility": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.9 }],
        "lcp-lazy-loaded": "off"
      }
    }
  }
}
